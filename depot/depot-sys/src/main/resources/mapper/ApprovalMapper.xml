<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ApprovalMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.entity.Approval">
        <id column="id" property="id" />
        <result column="goods_id" property="goodsId" />
        <result column="user_id" property="userId" />
        <result column="admin_id" property="adminId" />
        <result column="count" property="count" />
        <result column="createtime" property="createtime" />
        <result column="remark" property="remark" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, goods_id, user_id, admin_id, count, createtime, remark, status
    </sql>
    <select id="pageC" resultType="com.example.entity.ApprovalRes">
        select a.* ,b.name goodsname,c.name storagename,d.name goodstypename,
               (select u.name from user u where u.id=a.user_id)username
        from approval a,goods b,storage c,goodsType d
--         where a.goods_id=b.id and b.storage=c.id and b.goodsType=d.id
         ${ew.customSqlSegment}
    </select>

</mapper>
